{
  "name": "ros2-dev",
  "image": "manipulation:latest",
  "runArgs": [
    "--env=DISPLAY=host.docker.internal:0",
    "--env=QT_X11_NO_MITSHM=1",
    "--volume=/tmp/.X11-unix:/tmp/.X11-unix:rw"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-iot.vscode-ros",
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder}/ros2_ws,target=/root/ros2_ws,type=bind",
    "source=${localEnv:HOME}/automaticaddison/shared/ros2,target=/root/shared/ros2,type=bind"
  ],
  "postCreateCommand": "/bin/bash /workspaces/speedpilot/docker/build.sh",
  "containerEnv": {
    "DISPLAY": "host.docker.internal:0",
    "QT_X11_NO_MITSHM": "1",
    "INSIDE_DEVCONTAINER": "true"
  }
}